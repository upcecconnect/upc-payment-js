{
  "name": "upc-payment-js",
  "version": "1.0.0",
  "description": "upc-payment-js allows to initiate and process a payment in a separate browser tab or within an iframe directly on the website",
  "main": "./dist/umd/upc-payment-js.umd.cjs",
  "module": "./dist/es/upc-payment-js.js",
  "exports": {
    ".": {
      "require": "./dist/umd/upc-payment-js.umd.cjs",
      "import": "./dist/es/upc-payment-js.js"
    }
  },
  "type": "module",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --mode iife && vite build --mode es && vite build --mode umd"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/upcecconnect/upc-payment-js.git"
  },
  "homepage": "https://ecconnect.com.ua",
  "keywords": [
    "upc",
    "eCommerce"
  ],
  "author": "UPC",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.6.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "vite-plugin-dts": "^4.2.2"
  },
  "files": [
    "dist/es",
    "dist/umd"
  ]
}
